#set($id = $doc.getFieldValue('dataset_id'))
<div id="#result_id($doc)" class="doc">
  <div class="stats">
    <div class="count">
      #set($count = $response.results.indexOf($doc) + $page.start + 1)
      # $count
    </div>
    <div class="score">
      <a href="#">
        #field("score")
      </a>
      #if($response.getExplainMap())
      <div class="exp">
        $response.getExplainMap().get($id)
      </div>
      #end
    </div>
  </div>

  <div class="title">

   #if($doc.getFieldValue('has_metadata'))
    <a target="_top" href='http://dx.doi.org/#esc_doi("#f('doi')")'>#field('title')</a>
	#else
    <a target="_top" href='http://dx.doi.org/#esc_doi("#f('doi')")'>#field('doi')</a>
	#end

    <span class="version">
      #if_has_field("version", "[version #field('version')]")
    </span>

  <span class="info">

	#if($doc.containsKey("iso") && $doc.getFieldValue("iso") != "")
    		<a target="_top" class="doi" href="http://doidb.wdc-terra.org/oaip/oai?verb=GetRecord&metadataPrefix=iso19139&identifier=oai:doidb.wdc-terra.org:#esc_doi("#f('dataset_id')")"> ISO19139(INSPIRE) </a>
	#else
		#if ($doc.containsKey("dif") && $doc.getFieldValue("dif") != "")
    		<a target="_top" class="doi" href="http://doidb.wdc-terra.org/oaip/oai?verb=GetRecord&metadataPrefix=iso19139&identifier=oai:doidb.wdc-terra.org:#esc_doi("#f('dataset_id')")"> ISO19139(DIF-converted) </a>
		#end
	#end


	#if($doc.containsKey("dif") && $doc.getFieldValue("dif") != "")
    		<a target="_top" class="doi" href="http://doidb.wdc-terra.org/oaip/oai?verb=GetRecord&metadataPrefix=dif&identifier=oai:doidb.wdc-terra.org:#esc_doi("#f('dataset_id')")"> DIF </a>
	#end

	<a target="_top" class="doi" href="http://doidb.wdc-terra.org/oaip/oai?verb=GetRecord&metadataPrefix=datacite&identifier=oai:doidb.wdc-terra.org:#esc_doi("#f('dataset_id')")"> DataCite</a>
 
	#field("resourceTypeGeneral")
	#if_has_field("resourceType", ": #field('resourceType')")
  </span>

  </div>

  <div class="short">
    #field_et_al("creator",5)
    #if(! $doc.getFieldValue("has_metadata"))
      [no metadata registered]
    #end
  </div>
  <div class="full"></div>
  <div class="hl">
    #if($request.params.q != "*")
      #parse("ui/hl.vm")
    #end
  </div>
</div>
